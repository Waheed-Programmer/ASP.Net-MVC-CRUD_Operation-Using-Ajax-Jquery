            async: true,
            type: 'POST',
            url: '/Employe/AddUpdateEmploye',
            data: JSON.stringify(ViewModelEmploye),
            datatype: 'JSON',
            contentType: 'application/json, charset=utf-8',
            success: function (data) {
                if (data.Success) {
                    $("#btnupdate").hide();
                    alert(data.Message);
                    LoadEmploye();
                    resetEmploye();

                }

            },
            error: function (error) {
                alert("There are sum error here")
            }

